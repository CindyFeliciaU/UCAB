<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:background="@drawable/list_offer_background"
    android:clickable="true">

    <TextView
        android:id="@+id/list_seats"
        android:layout_width="30dp"
        android:layout_height="23dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="356dp"
        android:text="X"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_price"
        android:layout_width="32dp"
        android:layout_height="23dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="356dp"
        android:text="X"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_flag"
        android:layout_width="71dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:ignore="VectorDrawableCompat"


        />

    <TextView
        android:id="@+id/list_date"
        android:layout_width="155dp"
        android:layout_height="33dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/list_offer_background"

        android:text="Date"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_hour"
        android:layout_width="94dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/list_offer_background"
        android:text="Hour"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_departure"
        android:layout_width="292dp"
        android:layout_height="29dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="12dp"
        android:text="departure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_destination"
        android:layout_width="297dp"
        android:layout_height="29dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="8dp"
        android:text="destination"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="144dp"
        android:rotation="-89"
        android:rotationX="4"
        android:rotationY="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25dp"
        android:layout_height="23dp"
        android:layout_marginTop="124dp"

        android:layout_marginEnd="332dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/seats" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="9dp"
        android:layout_height="12dp"
        android:layout_marginTop="100dp"

        android:layout_marginEnd="348dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dollars" />

</androidx.constraintlayout.widget.ConstraintLayout>